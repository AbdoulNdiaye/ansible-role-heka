: ${ret:=0}
PROC=/usr/bin/hekad
PID_FILE="{{ heka_hekad_pid_dir}}/{{ heka_hekad_pid_file }}"

start(){
  if [ -f $PID_FILE ]; then
        echo "Already started\n"
        exit
  else
        echo "Starting $PROC\n"
  fi

  daemon -n hekad -r -o {{ heka_hekad_log_file }} $PROC -- --config={{ heka_hekad_dir }}
}

stop(){
  daemon -n hekad --stop
}

case "$1" in
  start)
    start
  ;;
  stop)
    stop
  ;;
  restart)
    stop
    start
  ;;
  status)
    [ -f $PID_FILE ] && echo "Heka is running" || echo "No process found"
  ;;
  *)
    echo $"Usage: $prog {start|stop|restart|status}"
    exit 3
  ;;
esac

exit $ret
